@model SignUpViewModel

@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-start vh-100 mt-5">
    <div class="card shadow-lg p-4" style="width: 550px; border-radius: 12px;">
        <h2 class="fw-light text-center" style="margin-bottom: 30px;">Kayıt Ol</h2>


        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show fade-in-alert" role="alert">
                @ViewBag.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <form asp-controller="Home" asp-action="SignUp" method="post">
            <div class="mb-3 d-flex align-items-center">
                <label asp-for="UserName" class="form-label me-3 fw-light" style="width: 120px;">Kullanıcı Adı:</label>
                <input asp-for="UserName" class="form-control input-custom" required />
            </div>

            <div class="mb-3 d-flex align-items-center">
                <label asp-for="Email" class="form-label me-3 fw-light" style="width: 120px;">Email:</label>
                <input asp-for="Email" type="email" class="form-control input-custom" required />
            </div>

            <div class="mb-3 d-flex align-items-center">
                <label asp-for="Phone" class="form-label me-3 fw-light" style="width: 120px;">Telefon:</label>
                <input asp-for="Phone" type="tel" class="form-control input-custom" required />
            </div>

            <div class="mb-3 d-flex align-items-center">
                <label asp-for="Password" class="form-label me-3 fw-light" style="width: 120px;">Şifre:</label>
                <input asp-for="Password" type="password" class="form-control input-custom" id="password" required />
            </div>

            <div class="mb-3 d-flex align-items-center">
                <label asp-for="ConfirmPassword" class="form-label me-3 fw-light" style="width: 120px;">Şifre Tekrar:</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control input-custom" id="confirmPassword" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn custom-btn">
                    Kayıt Ol
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    /* Form butonu */
    .custom-btn {
        background-color: #ff4f79;
        color: white;
        font-size: 16px;
        padding: 8px 30px;
        border-radius: 6px;
        border: none;
        transition: 0.3s;
    }

    .custom-btn:hover {
        background-color: #ff3b65;
        transform: scale(1.05);
    }

    /* Input focus efekti */
    .input-custom:focus {
        border-color: #ff4f79 !important;
        box-shadow: 0 0 5px #ff4f79 !important;
    }

    /* Kart yukarıda başlasın */
    .vh-100 {
        min-height: 80vh !important;
    }
</style>
