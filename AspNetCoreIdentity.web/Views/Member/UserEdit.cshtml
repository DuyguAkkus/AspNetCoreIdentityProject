@{
    ViewData["Title"] = "Kullanıcı Bilgi Güncelleme";
    Layout = "_Layout";
}

@model UserEditViewModel

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<!-- CSS ile input kutularının ve butonun seçildiğinde rengini değiştirme -->
<style>
    /* Input, select ve textarea alanları için odaklanma (focus) efekti */
    input:focus, select:focus, textarea:focus {
        border-color: #D13250 !important;
        box-shadow: 0 0 5px #D13250 !important;
        outline: none !important;
    }

    /* Butonun arka plan rengini değiştirme */
    .btn-primary {
        background-color: #D13250 !important;
        border-color: #D13250 !important;
    }

    /* Butonun üzerine gelince (hover) renk değişimi */
    .btn-primary:hover {
        background-color: #B12740 !important; /* Daha koyu kırmızı */
        border-color: #B12740 !important;
    }
</style>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>@ViewData["Title"]</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="UserName"></label>
                <div class="col-md-8">
                    <input asp-for="UserName" class="form-control">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="PhoneNumber"></label>
                <div class="col-md-8">
                    <input asp-for="PhoneNumber" class="form-control">
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="BirthDate"></label>
                <div class="col-md-8">
                    <input asp-for="BirthDate" class="form-control" type="date">
                    <span class="text-danger" asp-validation-for="BirthDate"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="City"></label>
                <div class="col-md-8">
                    <input asp-for="City" class="form-control">
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Gender"></label>
                <div class="col-md-8">
                    <select class="form-control" asp-for="Gender" asp-items="ViewBag.genderList">
                        <option value="">Cinsiyet seçiniz</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="ProfilePicture"></label>
                <div class="col-md-8">
                    <input class="form-control" type="file" asp-for="ProfilePicture" />
                    <span class="text-danger" asp-validation-for="ProfilePicture"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8 offset-md-4">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </div>
        </form>
    </div>
</div>
