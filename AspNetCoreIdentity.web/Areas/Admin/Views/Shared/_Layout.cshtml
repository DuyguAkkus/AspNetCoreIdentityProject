<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AspNetCoreIdentity.web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AspNetCoreIdentity.web.styles.css" asp-append-version="true"/>

    <style>
        /* 🌸 Navbar'ı beyaz yap */
        .custom-navbar {
            background-color: white !important; /* Beyaz arka plan */
            border-bottom: 2px solid #ff4f79; /* İnce pembe çizgi */
        }

        /* Navbar içindeki metinleri pembe yap */
        .custom-navbar .navbar-brand,
        .custom-navbar .nav-link,
        .custom-navbar .dropdown-toggle {
            color: #ff4f79 !important; /* Pembe yazı */
            font-weight: bold;
        }

        /* Linklerin hover efekti */
        .custom-navbar .nav-link:hover,
        .custom-navbar .dropdown-toggle:hover {
            color: #e6004c !important; /* Daha koyu pembe */
        }

        /* Navbar içindeki butonlar ve linkler arasındaki boşluğu artır */
        .custom-navbar .nav-item {
            margin-right: 20px; /* Sağdan boşluk ekler */
        }

        .custom-navbar .nav-link {
            padding: 12px 18px; /* Linklere dolgu (padding) ekler */
        }

        /* 🌟 Dropdown Menüsünü Şıklaştır */
        .dropdown-menu {
            border: none;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item {
            color: #ff4f79 !important;
        }

        .dropdown-item:hover {
            background-color: #ffe6eb !important; /* Hafif açık pembe */
            color: #e6004c !important; /* Koyu pembe */
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AspNetCoreIdentity.web</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="UserList">Üye Listesi</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Roller
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Roles" asp-action="Index">Tüm Roller</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - AspNetCoreIdentity.web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<!-- Bootstrap ve jQuery Dosyaları -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
